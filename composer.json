{
    "name": "avap/nora-php-framework",
    "description": "",
    "type": "project",
    "authors": [
        {
            "name": "Hajime MATSUMOTO",
            "email": "hajime.matsumoto@avap.co.jp"
        }
    ],
    "autoload": {
        "psr-4": {
            "Nora\\Framework\\": "src/",
            "NoraFake\\": "tests/lib/NoraFake"
        }
    },
    "scripts": {
        "coverage": [
            "php -dzend_extension=xdebug.so ./bin/phpunit -c ./settings/phpunit.report.xml"
        ],
        "phploc": [
            "./bin/phploc --count-tests --log-xml ./var/log/phploc.xml src"
        ],
        "phpmd": [
            "./bin/phpmd src xml ./settings/phpmd.xml --reportfile ./var/log/pmd.xml"
        ],
        "phpcs": [
            "./bin/phpcs --standard=./settings/phpcs.xml --report=xml --report-file=./var/log/phpcs.xml src"
        ],
        "report": [
            "@coverage",
            "@phploc",
            "@phpmd",
            "@phpcs",
            "@phpdox"
        ],
        "phpdox": [
            "./bin/phpdox"
        ],
        "cleanup": [
            "rm -rf build/coverage",
            "rm -rf build/logs",
            "rm -rf build/docs"
        ]
    },
    "scripts-description": {
        "coverage": "Create Coverage Report",
        "phploc": "Create phploc.xml",
        "phpmd": "Create pmd.xml",
        "phpcs": "Create phpcs.xml",
        "report": "Create php reports",
        "phpdox": "Create phpdox"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "cache/cache": "^1.0",
        "monolog/monolog": "^2.0"
    },
    "license": "proprietary",
    "require": {
        "doctrine/common": "^2.12",
        "avap/nora-php-business": "dev-master",
        "avap/nora-php-architecture": "dev-master",
        "avap/nora-php-utility": "dev-master",
        "avap/nora-php-logging": "dev-master",
        "nikic/php-parser": "^4.3"
    }
}
